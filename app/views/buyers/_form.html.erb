<%= form_with(model: buyer) do |form| %>
<% if buyer.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(buyer.errors.count, "error") %> prohibited this buyer from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% buyer.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :b_id, class: label_class %>
          <%= form.text_field :b_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :b_name, class: label_class %>
          <%= form.text_field :b_name, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :b_dob, class: label_class %>
          <%= form.date_field :b_dob, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if buyer.persisted? %>
<%= link_to "Cancel", buyer, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", buyers_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
