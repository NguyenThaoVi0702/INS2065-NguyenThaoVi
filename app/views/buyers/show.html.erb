<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Buyer</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to buyers_path, class: button_class(theme: "transparent") do %>
      All Buyers
      <% end %>
      <%= link_to edit_buyer_path(@buyer), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">B:</p>
        <p><%= @buyer.b_id %></p>
      </li>
      <li>
        <p class="font-semibold">B name:</p>
        <p><%= @buyer.b_name %></p>
      </li>
      <li>
        <p class="font-semibold">B dob:</p>
        <p><%= @buyer.b_dob %></p>
      </li>
  </ul>
</div>
