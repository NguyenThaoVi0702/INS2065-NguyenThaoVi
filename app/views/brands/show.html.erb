<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Brand</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to brands_path, class: "bg-black text-white px-4 py-2 rounded" do %>
      All Brands
      <% end %>
      <% if current_user.admin? %>
        <%= link_to edit_brand_path(@brand), class: "bg-black text-white px-4 py-2 rounded" do %>
        Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Name:</p>
        <p><%= @brand.name %></p>
      </li>
      <li>
        <p class="font-semibold">Logo:</p>
        <p><%= image_tag @brand.logo.url(:square) if @brand.logo.present? %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @brand.description %></p>
      </li>
  </ul>
</div>
