
<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Comment</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to comments_path, class: "bg-black text-white px-4 py-2 rounded" do %>
      All Comments
      <% end %>
      <% if current_user.admin? %>
        <%= link_to edit_comment_path(@comment), class: "bg-black text-white px-4 py-2 rounded" do %>
        Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">User:</p>
        <p><%= @comment.user %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @comment.product %></p>
      </li>
      <li>
        <p class="font-semibold">Content:</p>
        <p><%= @comment.content %></p>
      </li>
  </ul>
</div>
