<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Rating</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to ratings_path, class: "bg-black text-white px-4 py-2 rounded" do %>
      All Ratings
      <% end %>
      <% if current_user.admin? %>
        <%= link_to edit_rating_path(@rating), class: "bg-black text-white px-4 py-2 rounded" do %>
        Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">User:</p>
        <p><%= @rating.user %></p>
      </li>
      <li>
        <p class="font-semibold">Product:</p>
        <p><%= @rating.product %></p>
      </li>
      <li>
        <p class="font-semibold">Stars rated:</p>
        <p><%= @rating.stars_rated %></p>
      </li>
  </ul>
</div>
