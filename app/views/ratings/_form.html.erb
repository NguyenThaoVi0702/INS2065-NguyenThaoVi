<%= form_with(model: rating) do |form| %>
<% if rating.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% rating.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :user_id, class: label_class %>
          <%= form.text_field :user_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :product_id, class: label_class %>
          <%= form.text_field :product_id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :stars_rated, class: label_class %>
          <%= form.number_field :stars_rated, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if rating.persisted? %>
<%= link_to "Cancel", rating, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", ratings_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
